<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itesm.ronald.emprendedor.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:src="@mipmap/logo4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button_Layout"
        android:visibility="visible"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_button_rounded"
            android:text="@string/ExpButton"
            android:textColor="@color/white"
            android:nestedScrollingEnabled="false"
            android:onClick="selectPromos" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_button_rounded"
            android:text="@string/MakeAWishButton"
            android:textColor="@color/white"
            android:onClick="selectWish" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_button_rounded"
            android:textColor="@color/white"
            android:text="@string/DonateButton"
            android:onClick="selectDonations" />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:src="@drawable/settings"
        android:background="@android:color/transparent"
        android:onClick="goToSettings"
        android:layout_below="@+id/Button_Layout"
        android:layout_marginTop="25dp" />


</RelativeLayout>
