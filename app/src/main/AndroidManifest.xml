<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="itesm.ronald.emprendedor" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icona"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="itesm.ronald.emprendedor.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PromoActivity"
            android:label="@string/title_activity_promo"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itesm.ronald.emprendedor.MainActivity" />
        </activity>
        <activity
            android:name=".WishActivity"
            android:label="@string/title_activity_wish"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itesm.ronald.emprendedor.MainActivity" />
        </activity>
        <activity
            android:name=".DonateActivity"
            android:label="@string/title_activity_donate"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itesm.ronald.emprendedor.MainActivity" />
        </activity>
        <activity
            android:name=".PromoDetailActivity"
            android:label="@string/title_activity_promo_detail"
            android:parentActivityName=".PromoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itesm.ronald.emprendedor.PromoActivity" />
        </activity>
        <activity
            android:name=".WishDetail"
            android:label="@string/title_activity_wish_detail"
            android:parentActivityName=".DonateActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itesm.ronald.emprendedor.DonateActivity" />
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:label="@string/title_activity_payment"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itesm.ronald.emprendedor.MainActivity" />
        </activity>
        <activity
            android:name=".ConfirmationActivity"
            android:label="@string/title_activity_confirmation"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="itesm.ronald.emprendedor.MainActivity" />
        </activity>
    </application>

</manifest>
